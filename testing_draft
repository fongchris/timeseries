def test_threshold():
	max_value = 2000
	probability_threshold = 0
	number_of_bands = 500
	window_size = 3
	stock_list = list(range(0,1428))
	main(stock_list,window_size, number_of_bands, max_value, 0.001)
	main(stock_list,window_size, number_of_bands, max_value, 0)

